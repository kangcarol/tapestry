<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<%- include('../partials/nav') %>

<main>
  <section>
    <div class="top"></div>
    <h1 id="click-question">share your experiences</h1>
    <% questions.slice().reverse().forEach(question => { %>
      <div class="new-question">
        <details class="summary-share">
          <summary id="summary-share"><%= question.text %></a></summary>
          <% if (user) { %>
            <form action="/answers" method="POST">
              <input type="text" name="text" autocomplete="off">
              <input name="question" value="<%= question._id %>" type="hidden">
              <span></span>
              <button type="submit" class="btn btn-warning btn-sm">save</button>
            </form>
          <% } %>
        </details>
      </div>
      <% }) %>
  </section>
</main>

<%- include('../partials/footer') %>
