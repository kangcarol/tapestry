<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>

  <% if (profile.avatar) { %>
    <div id="avatar-name-div">
      <img id="avatar"
      src="<%= profile.avatar %>"
      alt="<%= profile.name %> avatar"
      />
    </div>
    <% } %>
  <h1> <%= profile.name %></h1>

  <section>
    <ul>
      <% profile.answers.forEach(answer => { %>
        <% if (answer.author.equals(profile._id)) { %>
          <li><%= answer.question.text %></li>
          <li><%= answer.text %></li>
        <% } %>
        <% if (answer.author.equals(user?.profile._id)) { %>
          <div class="input-group">
          <form id="update-form" action="/answers/<%= answer._id %>?_method=PUT" method="POST">
            <input
              class="form-control"
              placeholder="Recipient's username"
              aria-label="Recipient's username with two button addons"
              type="text"
              name="text"
              value=" <%= answer.text %> "
              autocomplete="off"
            >
            <button class="btn btn-outline-secondary" type="submit">update</button>
          </form>
          <form
            action="/answers/<%= answer._id %>?_method=DELETE"
            method="POST"
            style="display: inline-block;"
          >
            <button class="btn btn-outline-secondary" type="submit">delete</button>
          </form>
        </div>
        <% } %>
      <% }) %>
    </ul>
  </section>
</main>

<%- include('../partials/footer') %>
