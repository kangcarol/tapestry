<%- include('../partials/html-head') %>
<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/answers.css">
<%- include('../partials/nav') %>
<main>
  <section>
    <% answers.slice().reverse().forEach(answer => { %>
      <div id="primary-qa-div">
        <div class="avatar-name-div">
          <img id="avatar"
            src="<%= answer.author.avatar %>"
            alt="<%= answer.author.name %> avatar"
          />
          <%= answer.author.name %>
          </div>

          <div id="qa-div">
            <p id="question">
              <%= answer.question.text %>
            </p>
            <p id="answer">
              <%= answer.text %>
            </p>
            <ul>
              <% answer.comments.slice().reverse().forEach(function(comment) { %>
                  <li><%= comment.commenter %>: <%= comment.text %></li>
              <% }) %>
            </ul>
            <details>
              <summary>add a comment</summary>
              <form
                id="add-comment-form"
                action="/answers/<%= answer._id %>/comments"
                method="POST"
              >
                <input name="text">
                <button type="submit" class="btn btn-secondary btn-sm">Add Comment</button>
              </form>
            </details>
          </div>

        </div>
      </div>
    <% }) %>
  </section>
</main>

<%- include('../partials/footer') %>
