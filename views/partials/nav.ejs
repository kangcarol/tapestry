<body>
<nav>
  <a href="/">
    <img src="/images/tapestry-logo.png" width="45px" height="45px">
  </a>
  <a href="/about">About</a>
  <a href="/answers">Browse</a>
  <a href="/questions">Share your experiences</a>
  <a href="/profiles">Get to know someone</a>

  <% if (user) { %>
    <% if (user.profile.admin) { %>
      <a href="/questions/new">Admin</a>
      <% } %>
      <a href="/auth/logout">Log Out</a>
    <a href="/profiles/<%= user.profile._id %>">
      <% if (user?.profile.avatar) { %>
        <div >
          <img id="avatar"
            src="<%= user.profile.avatar %>"
            alt="<%= user.profile.name %> avatar"
            height="45px"
            width="45px"
          />
        </div>
    </a>
    <% } %>
  <% } %>
</nav>
